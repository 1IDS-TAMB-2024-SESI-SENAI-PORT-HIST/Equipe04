var areaTrapezio= function(baseMaior, baseMenor, altura){
    var area = 0;
    area = ((baseMaior + baseMenor)*altura)/2;
    return area;
};
areaTrapezio(5, 3, 2);
console.log (areaTrapezio(5, 3, 2));

//////

var areaTrapezio= (baseMaior, baseMenor, altura) => {
    var area = 0;
    area = ((baseMaior + baseMenor)*altura)/2;
    return area;
};
areaTrapezio(5, 3, 2);
console.log (areaTrapezio(5, 3, 2));
